doctype html
html(lang="it")
  head
    meta(charset="UTF-8")
    title Scheda Assistenza
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
      }
      .container {
        width: 100%;
        /*border: 1px solid #000;*/
        padding: 0px;
        box-sizing: border-box;
        margin-bottom: 10px;
      }
      .header, .footer {
        width: 100%;
        text-align: right;
        font-size: 12px;
      }
      .header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
      }
      .header-left {
        text-align: left;
        font-weight: bold;
      }
      .header-right {
        text-align: right;
      }
      .section {
        margin-bottom: 10px;
      }
      .section-title {
        font-weight: bold;
        margin-bottom: 5px;
      }
      .bold {
        font-weight: bold;
      }
      .section-content {
        display: flex;
        justify-content: space-between;
        padding: 0px; /* Add padding for better spacing */
      }
      .left, .right {
        width: 30%;
         
      }
      .border {
        border: 1px solid #000; /* Add border to make the margin visible */
      }
      .wide-left {
        width: 70%; /* Increase the width for address section */
      }
      .barcode {
        text-align: right;
      }
      .barcode img {
        width: 100%;
      }
      .details, .note, .signature {
        margin-top: 5px;
      }
      .note-content, .signature-content {
        border: 1px solid #000;
        padding: 5px;
      }
      .note-content {
        height: 30px;
      }
      .signature-content {
        height: 20px;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
      }
      .table, .table th, .table td {
        border: 1px solid black;
      }
      .table th, .table td {
        padding: 5px;
        text-align: left;
      }
      .dashed-line {
        border-top: 1px dashed black;
        margin: 20px 0;
      }
      .columns {
        display: flex;
      }
      .column {
        flex: 1;
        padding: 10px;
        border: 1px solid #000;
        margin: 0px;
      }
      .column1 {
        flex: 1;
        padding: 10px;
        margin: 0px;
      }
      .margin-right {
        margin-right: 10px;
      }
      .small {
        width: 20%;
      }
      .large {
        width: 75%;
      }
      .signature {
        border-bottom: 1px solid black;
        margin-top: 30px;
        width: 200px;
      }
      .inline {
        display: inline;
      }
      .nb {
        text-size: 8px;
      }
  body
    .container
      .header
        .header-left
          div Scheda Assistenza
        .header-right.inline
          span Data:
          .bold.inline
            span= storico_stato[0].data.getDate().toString().padStart(2, '0')
            span /
            span= (storico_stato[0].data.getMonth() + 1).toString().padStart(2, '0')
            span /
            span= storico_stato[0].data.getFullYear()
      .section
        .columns
          .column.margin-right
            div
              span Indirizzo: 
              .bold.inline 
                span= via 
                span , 
                span= provincia 
                span , 
                span= cap
            div
