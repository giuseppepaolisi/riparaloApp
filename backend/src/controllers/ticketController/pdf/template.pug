              .bold.inline 
                span= pec
          .column.margin-right
            div
              span ID: 
              .bold.inline 
                span= _id
            div
              span Stato: 
              .bold.inline 
                span= stato
            div 
              span Acconto: €
              .bold.inline 
                span= acconto
            div 
              span Totale stimato: €
              .bold.inline 
                span= prezzo_stimato
          .column1.margin.barcode
            img(src=barcode, alt="Barcode")
        
      .section
        .section-content
          .column
            div
              span Brand: 
              .bold.inline 
                span= marca
          .column
            div
              span Prodotto: 
              .bold.inline 
                span= modello
          .column
            div
              span IMEI: 
              .bold.inline 
                span= imei
          .column
            div
              span Seriale: 
              .bold.inline 
                span= seriale
        
      .section
        .columns
          .column.margin-right.large
            div
              .bold
                span Servizi: 
              each servizio in servizi
                div
                  span= servizio.servizio
                  .bold.inline
                    span= ' - €' + servizio.prezzo
          .column.small
